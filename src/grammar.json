{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "zortex",
  "rules": {
    "document": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "article_headers"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "tags"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "_blank_line"
          }
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "body"
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "article_headers": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "article_header"
      }
    },
    "article_header": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "@@"
        },
        {
          "type": "SYMBOL",
          "name": "article_name"
        },
        {
          "type": "SYMBOL",
          "name": "_line_ending"
        }
      ]
    },
    "article_name": {
      "type": "PATTERN",
      "value": "[^\\n]+"
    },
    "tags": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "tag_line"
      }
    },
    "tag_line": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "@"
        },
        {
          "type": "SYMBOL",
          "name": "tag_name"
        },
        {
          "type": "SYMBOL",
          "name": "_line_ending"
        }
      ]
    },
    "tag_name": {
      "type": "PATTERN",
      "value": "[^\\s\\n]+"
    },
    "_blank_line": {
      "type": "PATTERN",
      "value": "\\n"
    },
    "body": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "_body_element"
      }
    },
    "_body_element": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "block"
        },
        {
          "type": "SYMBOL",
          "name": "_blank_line"
        }
      ]
    },
    "block": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "heading"
        },
        {
          "type": "SYMBOL",
          "name": "code_block"
        },
        {
          "type": "SYMBOL",
          "name": "latex_block"
        },
        {
          "type": "SYMBOL",
          "name": "list_block"
        },
        {
          "type": "SYMBOL",
          "name": "label_block"
        },
        {
          "type": "SYMBOL",
          "name": "paragraph_block"
        }
      ]
    },
    "heading": {
      "type": "PREC_LEFT",
      "value": "heading",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "SYMBOL",
            "name": "heading_marker"
          },
          {
            "type": "PATTERN",
            "value": "[ \\t]+"
          },
          {
            "type": "SYMBOL",
            "name": "heading_content"
          },
          {
            "type": "SYMBOL",
            "name": "_line_ending"
          }
        ]
      }
    },
    "heading_marker": {
      "type": "PATTERN",
      "value": "#{1,6}"
    },
    "heading_content": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "_inline"
      }
    },
    "label_block": {
      "type": "PREC_LEFT",
      "value": "label",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "SYMBOL",
            "name": "label_line"
          },
          {
            "type": "CHOICE",
            "members": [
              {
                "type": "CHOICE",
                "members": [
                  {
                    "type": "SEQ",
                    "members": [
                      {
                        "type": "SYMBOL",
                        "name": "indent"
                      },
                      {
                        "type": "SYMBOL",
                        "name": "label_content"
                      },
                      {
                        "type": "SYMBOL",
                        "name": "dedent"
                      }
                    ]
                  },
                  {
                    "type": "SYMBOL",
                    "name": "label_content"
                  }
                ]
              },
              {
                "type": "BLANK"
              }
            ]
          }
        ]
      }
    },
    "label_line": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "[A-Za-z0-9][^:\\n]*[A-Za-z0-9]"
        },
        {
          "type": "STRING",
          "value": ":"
        },
        {
          "type": "SYMBOL",
          "name": "_line_ending"
        }
      ]
    },
    "label_content": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "_body_element"
      }
    },
    "list_block": {
      "type": "PREC_RIGHT",
      "value": "list",
      "content": {
        "type": "REPEAT1",
        "content": {
          "type": "SYMBOL",
          "name": "list_item"
        }
      }
    },
    "list_item": {
      "type": "PREC_RIGHT",
      "value": "list",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "SYMBOL",
            "name": "list_marker"
          },
          {
            "type": "PATTERN",
            "value": "[ \\t]+"
          },
          {
            "type": "SYMBOL",
            "name": "list_item_content"
          },
          {
            "type": "CHOICE",
            "members": [
              {
                "type": "SEQ",
                "members": [
                  {
                    "type": "SYMBOL",
                    "name": "indent"
                  },
                  {
                    "type": "SYMBOL",
                    "name": "list_nested_content"
                  },
                  {
                    "type": "SYMBOL",
                    "name": "dedent"
                  }
                ]
              },
              {
                "type": "BLANK"
              }
            ]
          }
        ]
      }
    },
    "list_marker": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "-"
        },
        {
          "type": "PATTERN",
          "value": "\\d+\\."
        }
      ]
    },
    "list_item_content": {
      "type": "SEQ",
      "members": [
        {
          "type": "REPEAT1",
          "content": {
            "type": "SYMBOL",
            "name": "_inline"
          }
        },
        {
          "type": "SYMBOL",
          "name": "_line_ending"
        }
      ]
    },
    "list_nested_content": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "_body_element"
      }
    },
    "code_block": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "```"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "language"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "_line_ending"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "code_content"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "STRING",
          "value": "```"
        },
        {
          "type": "SYMBOL",
          "name": "_line_ending"
        }
      ]
    },
    "language": {
      "type": "PATTERN",
      "value": "[a-zA-Z0-9_+-]+"
    },
    "code_content": {
      "type": "PATTERN",
      "value": "[^`]*(?:`[^`]|``[^`])*[^`]*"
    },
    "latex_block": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SEQ",
          "members": [
            {
              "type": "STRING",
              "value": "$$"
            },
            {
              "type": "SYMBOL",
              "name": "_line_ending"
            },
            {
              "type": "CHOICE",
              "members": [
                {
                  "type": "SYMBOL",
                  "name": "latex_content"
                },
                {
                  "type": "BLANK"
                }
              ]
            },
            {
              "type": "STRING",
              "value": "$$"
            },
            {
              "type": "SYMBOL",
              "name": "_line_ending"
            }
          ]
        },
        {
          "type": "SEQ",
          "members": [
            {
              "type": "STRING",
              "value": "$"
            },
            {
              "type": "SYMBOL",
              "name": "_line_ending"
            },
            {
              "type": "CHOICE",
              "members": [
                {
                  "type": "SYMBOL",
                  "name": "latex_content"
                },
                {
                  "type": "BLANK"
                }
              ]
            },
            {
              "type": "STRING",
              "value": "$"
            },
            {
              "type": "SYMBOL",
              "name": "_line_ending"
            }
          ]
        }
      ]
    },
    "latex_content": {
      "type": "PATTERN",
      "value": "[^$]+"
    },
    "paragraph_block": {
      "type": "SYMBOL",
      "name": "paragraph_content"
    },
    "paragraph_content": {
      "type": "PREC_LEFT",
      "value": "paragraph",
      "content": {
        "type": "REPEAT1",
        "content": {
          "type": "SEQ",
          "members": [
            {
              "type": "REPEAT1",
              "content": {
                "type": "SYMBOL",
                "name": "_inline"
              }
            },
            {
              "type": "CHOICE",
              "members": [
                {
                  "type": "SEQ",
                  "members": [
                    {
                      "type": "SYMBOL",
                      "name": "_line_ending"
                    },
                    {
                      "type": "PATTERN",
                      "value": "[ \\t]*\\n"
                    }
                  ]
                },
                {
                  "type": "SEQ",
                  "members": [
                    {
                      "type": "SYMBOL",
                      "name": "_line_ending"
                    },
                    {
                      "type": "SYMBOL",
                      "name": "_eof"
                    }
                  ]
                },
                {
                  "type": "SYMBOL",
                  "name": "_line_ending"
                }
              ]
            }
          ]
        }
      }
    },
    "_inline": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "formatted_text"
        },
        {
          "type": "SYMBOL",
          "name": "inline_code"
        },
        {
          "type": "SYMBOL",
          "name": "inline_latex"
        },
        {
          "type": "SYMBOL",
          "name": "link"
        },
        {
          "type": "SYMBOL",
          "name": "_inline_content"
        }
      ]
    },
    "_inline_content": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "text"
        },
        {
          "type": "SYMBOL",
          "name": "_soft_line_break"
        }
      ]
    },
    "formatted_text": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "bolditalic"
        },
        {
          "type": "SYMBOL",
          "name": "bold"
        },
        {
          "type": "SYMBOL",
          "name": "italic"
        }
      ]
    },
    "bolditalic": {
      "type": "PREC_LEFT",
      "value": "bolditalic",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "***"
          },
          {
            "type": "REPEAT1",
            "content": {
              "type": "SYMBOL",
              "name": "_inline_bolditalic"
            }
          },
          {
            "type": "STRING",
            "value": "***"
          }
        ]
      }
    },
    "bold": {
      "type": "PREC_LEFT",
      "value": "bold",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "**"
          },
          {
            "type": "REPEAT1",
            "content": {
              "type": "SYMBOL",
              "name": "_inline_bold"
            }
          },
          {
            "type": "STRING",
            "value": "**"
          }
        ]
      }
    },
    "italic": {
      "type": "PREC_LEFT",
      "value": "italic",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "*"
          },
          {
            "type": "REPEAT1",
            "content": {
              "type": "SYMBOL",
              "name": "_inline_italic"
            }
          },
          {
            "type": "STRING",
            "value": "*"
          }
        ]
      }
    },
    "_inline_bolditalic": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "inline_code"
        },
        {
          "type": "SYMBOL",
          "name": "inline_latex"
        },
        {
          "type": "SYMBOL",
          "name": "link"
        },
        {
          "type": "ALIAS",
          "content": {
            "type": "PATTERN",
            "value": "[^*\\n]+"
          },
          "named": true,
          "value": "text"
        }
      ]
    },
    "_inline_bold": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "italic"
        },
        {
          "type": "SYMBOL",
          "name": "inline_code"
        },
        {
          "type": "SYMBOL",
          "name": "inline_latex"
        },
        {
          "type": "SYMBOL",
          "name": "link"
        },
        {
          "type": "ALIAS",
          "content": {
            "type": "PATTERN",
            "value": "[^*\\n]+"
          },
          "named": true,
          "value": "text"
        }
      ]
    },
    "_inline_italic": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "inline_code"
        },
        {
          "type": "SYMBOL",
          "name": "inline_latex"
        },
        {
          "type": "SYMBOL",
          "name": "link"
        },
        {
          "type": "ALIAS",
          "content": {
            "type": "PATTERN",
            "value": "[^*\\n]+"
          },
          "named": true,
          "value": "text"
        }
      ]
    },
    "inline_code": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "`"
        },
        {
          "type": "PATTERN",
          "value": "[^`\\n]+"
        },
        {
          "type": "STRING",
          "value": "`"
        }
      ]
    },
    "inline_latex": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "$"
        },
        {
          "type": "PATTERN",
          "value": "[^$\\n]+"
        },
        {
          "type": "STRING",
          "value": "$"
        }
      ]
    },
    "link": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "zortex_link"
        },
        {
          "type": "SYMBOL",
          "name": "markdown_link"
        }
      ]
    },
    "zortex_link": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "["
        },
        {
          "type": "SYMBOL",
          "name": "link_text"
        },
        {
          "type": "STRING",
          "value": "]"
        }
      ]
    },
    "markdown_link": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "["
        },
        {
          "type": "SYMBOL",
          "name": "link_text"
        },
        {
          "type": "STRING",
          "value": "]"
        },
        {
          "type": "STRING",
          "value": "("
        },
        {
          "type": "SYMBOL",
          "name": "url"
        },
        {
          "type": "STRING",
          "value": ")"
        }
      ]
    },
    "link_text": {
      "type": "PATTERN",
      "value": "[^\\]]+"
    },
    "url": {
      "type": "PATTERN",
      "value": "[^)]+"
    },
    "text": {
      "type": "TOKEN",
      "content": {
        "type": "PREC",
        "value": -1,
        "content": {
          "type": "PATTERN",
          "value": "[^*`$\\[\\]\\n]+"
        }
      }
    },
    "_soft_line_break": {
      "type": "STRING",
      "value": " "
    },
    "_line_ending": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "\n"
        },
        {
          "type": "SYMBOL",
          "name": "_eof"
        }
      ]
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "[ \\t\\f\\r]"
    }
  ],
  "conflicts": [
    [
      "paragraph_content",
      "list_item"
    ],
    [
      "_inline_content",
      "text"
    ],
    [
      "body",
      "label_content",
      "list_nested_content"
    ]
  ],
  "precedences": [
    [
      {
        "type": "STRING",
        "value": "label"
      },
      {
        "type": "STRING",
        "value": "heading"
      },
      {
        "type": "STRING",
        "value": "list"
      },
      {
        "type": "STRING",
        "value": "paragraph"
      }
    ],
    [
      {
        "type": "STRING",
        "value": "bolditalic"
      },
      {
        "type": "STRING",
        "value": "bold"
      },
      {
        "type": "STRING",
        "value": "italic"
      },
      {
        "type": "STRING",
        "value": "text"
      }
    ]
  ],
  "externals": [
    {
      "type": "SYMBOL",
      "name": "indent"
    },
    {
      "type": "SYMBOL",
      "name": "dedent"
    },
    {
      "type": "SYMBOL",
      "name": "_eof"
    }
  ],
  "inline": [],
  "supertypes": []
}
